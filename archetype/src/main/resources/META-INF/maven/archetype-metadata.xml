<archetype-descriptor
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="srv-re-produtos-archetype">
    <requiredProperties>
        <requiredProperty key="description"/>
		<requiredProperty key="year"/>
		<requiredProperty key="swaggerName"/>
    </requiredProperties>
	<fileSets>
		<fileSet filtered="true" packaged="false">
            <directory/>
			<includes>
				<include>.gitignore</include>
				<include>Dockerfile</include>
				<include>mvnw</include>
				<include>mvnw.cmd</include>
				<include>OPIN.PR</include>
				<include>OPIN.SECRETS</include>
				<include>OPIN.TH</include>
				<include>OPIN.TI</include>
				<include>OPIN.TU</include>
				<include>README.md</include>
			</includes>
		</fileSet>
		<fileSet>
			 <directory>.githooks</directory>
		 </fileSet>
		<fileSet >
			<directory>docs</directory>
		</fileSet>
		<fileSet filtered="true">
			 <directory>misc</directory>
		</fileSet>
        <fileSet filtered="true">
            <directory>src/main/java</directory>
        </fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
		</fileSet>
        <fileSet>
            <directory>src/test/java</directory>
        </fileSet>
		<fileSet>
			<directory>src/test/resources</directory>
		</fileSet>
    </fileSets>
</archetype-descriptor>