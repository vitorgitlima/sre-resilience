<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="NAME" value="opin-srv-sre-chassi" />
    <property name="LOGS" value="/var/log/${NAME}" />
    <property name="ARCHIVED" value="archived" />
    <property name="FILESIZE" value="100MB" />

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!-- init springProfile production !-->
    <springProfile name="prod, production">

        <appender name="RollingFile"
                  class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOGS}/${NAME}.log</file>

            <encoder
                    class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>%d %p %C{1.} [%t] %m%n %msg%n%throwable{1}</Pattern>
            </encoder>

            <rollingPolicy
                    class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily and when the file reaches 100 MegaBytes -->
                <fileNamePattern>${LOGS}/${ARCHIVED}/${NAME}-%d{yyyy-MM-dd}.%i.log
                </fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy
                        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>${FILESIZE}</maxFileSize>

                </timeBasedFileNamingAndTriggeringPolicy>
                <maxHistory>30</maxHistory>
                <totalSizeCap>100MB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <root level="${ROOT_LOG_LEVEL:-INFO}">
            <appender-ref ref="RollingFile" />
        </root>

    </springProfile>
    <!-- finish springProfile production !-->


    <!-- init springProfile development !-->
    <springProfile name="dev, development">
        <root level="${ROOT_LOG_LEVEL:-INFO}">
            <appender-ref ref="Console" />
        </root>
    </springProfile>
    <!-- finish springProfile development !-->


    <!-- init springProfile debug !-->
    <springProfile name="debug">
        <root level="${ROOT_LOG_LEVEL:-DEBUG}">
            <appender-ref ref="Console" />
        </root>
    </springProfile>
    <!-- finish springProfile debug !-->

</configuration>